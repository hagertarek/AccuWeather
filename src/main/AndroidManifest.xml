<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hagertarek.accuweather">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.ActivityMain"
            android:theme="@style/AppTheme.No">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ActivityCities"
            android:theme="@style/AppTheme"
            android:label="@string/citiesLable"
            android:parentActivityName=".Activities.ActivityMain"
            >
            ></activity>
        <activity android:name=".Activities.ActivitySetting"
            android:theme="@style/AppTheme"
            android:label="@string/settingLable"
            android:parentActivityName=".Activities.ActivityMain">
            ></activity>
        <activity android:name=".Activities.ActivityAddCity"
            android:theme="@style/AppTheme"
            android:label="@string/addCityLable"
            android:parentActivityName=".Activities.ActivityCities">
            ></activity>

    </application>

</manifest>